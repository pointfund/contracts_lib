<div class="panel panel-default row">  
    <div class="panel-heading">
      <%= # render "sort/book" 
      %>
      <h2><%= @home.length
       %>
       <!--  hardcoded book ID -->
       Contract records in book </h2>
    </div>
    <div class="panel-body col-lg-6">
      <table>
      	  <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Sections</th>
            <th>Book</th>
            <th>Book</th>
            <th colspan="3"></th>
          </tr>
        </thead>
       
         <% @home.each do |contract| %>
            <tr> 
             
            	<td><%= contract.id %></td>
              <td><%= contract.name %></td>
              <td><%= contract.sections %></td>
              <td><%= contract.book_id %></td>

            
              <td><div class="btn btn-default"><%= link_to 'View Sections', contract %></div></td>
              <td><div class="btn btn-success"><%= link_to 'Edit Contract', edit_contract_path(contract) %></div></td>
              <td>
         <!--        <div class="btn btn-danger"><%= # link_to 'Remove Contract', contract, method: :delete, data: { confirm: 'Are you sure to remove section?' } 
                %></div> -->
              </td>
            </tr>
          <% end %> 

      </table>
    </div>

                
</div>
