<div class="panel panel-default panel-info"> 
	<div class="panel-heading"> 
		<div class="row"> 
			<div class="col-sm-8">
				<h4>
				Contract Editing :</h4>
			</div>
		</div> 
		
	</div>
	<div class="">
		<div class="row">
			<div class="col-md-12 col-md-offset-0  full-page start_page">
				<div class="panel-header">
					  <%=  image_tag "pF_logo_ani.gif", width: 200, height: 200, alt: ('PF Contract form : ' ), class: "image_offset" %>
				</div>


				<div class="panel-body "> 
		  			<%= link_to "PDF Creator",  {:controller => "pdf_page", :action => "index" }, class: "btn btn-info  btn-block btn-expand" %> 
		  			<%= link_to "Browse Contracts ", contracts_path, class: "btn btn-success  btn-block btn-expand" %>
		  			<%= # link_to "Edit Contracts", show_edit_path(contract_id: 1), class: "btn btn-info" 
		  			%>  



					<div class="btn-group btn-block btn-expand pull-right">
						<div type="button" class="btn btn-default dropdown-toggle btn-danger btn-block   " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Edit Contracts <span class="caret"></span>
						</div>
			  		<ul class="dropdown-menu ">
						<% @contracts.length.times do |var|%>
					<!-- some_controller_name/some_get_request -->
							<li><%= link_to show_edit_path(contract_id: @contracts[var].id.to_s), {:controller => "contracts", :action => "show_edit" }  do  
							%>
								<%= @contracts[var].id 
								%>
								<%= @contracts[var].name 
								%>
								<%  end 
								%>
							</li>
							<% end %>
						<li role="separator" class="divider"></li>
						<li><a href="#">Separated link</a></li>
					</ul>
					</div>
		  		</div>
			</div>
		</div>
	</div>
</div>
	<%  %>
