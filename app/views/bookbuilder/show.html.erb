<h1>Bookbuilder#show</h1>
<p>Add contract </p>

<% if(@books.length >= 1) %>
	<table>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.name %></td>
				<td><%= book.page_count %></td>
			</tr>
		<% end %>
	</table>
	<% else %>
	<%= link_to "Build Books -->", bookbuilder_build_books_path, class: "btn btn-info btn-lg" %> 
<% end %>

<% if(@contracts.length == 0) %>
		<%= link_to "Build Contracts -->", bookbuilder_build_contracts_path, class: "btn btn-info btn-lg" %> 
<% end %>

